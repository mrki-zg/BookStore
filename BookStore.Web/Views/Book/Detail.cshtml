@model BookStore.Web.Models.Book.BookDetailViewModel

@{
    ViewData["Title"] = "Book Detail";
}

<h1>@Model.Title</h1>

<div>
    <h4>Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Title">Title</label>
        </dt>
        <dd class="col-sm-10">
            <input disabled="disabled" class="form-control" value="@Model.Title" />
        </dd>

        <dt class="col-sm-2">
            <label asp-for="Summary">Summary</label>
        </dt>
        <dd class="col-sm-10">
            <textarea disabled="disabled" class="form-control">@Model.Summary</textarea>
        </dd>

        <dt class="col-sm-2">
            <label asp-for="Price">Price (€)</label>
        </dt>
        <dd class="col-sm-10">
            <input disabled="disabled" class="form-control" value="@Model.Price" />
        </dd>

        <dt class="col-sm-2">
            <label asp-for="AuthorName">Author</label>
        </dt>
        <dd class="col-sm-10">
            <input disabled="disabled" class="form-control" value="@Model.AuthorName" />
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>
